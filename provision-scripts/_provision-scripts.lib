does_vm_exist()
{
  VMCHECK=$(az vm get-instance-view -g $AZURE_RESOURCE_GROUP -n $HOSTNAME --subscription $AZURE_SUBSCRIPTION --query vmId 2>&1 | grep "ResourceNotFound")
  if [ -z "$VMCHECK" ]; then
